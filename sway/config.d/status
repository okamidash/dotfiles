#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
    position top
    output DP-2
    # When the status_command prints a new line to stdout, swaybar updates.
    # The default just shows the current date and time.
    status_command SCRIPT_DIR=~/config/i3/blocks/blocks i3blocks -c ~/.config/sway/blocks/left.conf
    colors {
        pango_markup enabled
        statusline $bg
        background $bg
        statusline $fg
        focused_background $bg
        focused_workspace $color5 $color5 $fg
        inactive_workspace $color0 $color0 $fg
        active_workspace $color0 $color0 $fg
        urgent_workspace $color1 $color1 $fg
    }
}
bar {
    position top
    output DVI-D-1
    # When the status_command prints a new line to stdout, swaybar updates.
    # The default just shows the current date and time.
    status_command SCRIPT_DIR=~/config/i3/blocks/blocks i3blocks -c ~/.config/sway/blocks/right.conf
    colors {
        pango_markup enabled
        statusline $bg
        background $bg
        statusline $fg
        focused_background $bg
        focused_workspace $color5 $color5 $fg
        inactive_workspace $color0 $color0 $fg
        active_workspace $color0 $color0 $fg
        urgent_workspace $color1 $color1 $fg
    }
}

